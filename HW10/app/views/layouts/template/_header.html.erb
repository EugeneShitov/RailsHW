<div class="container">
  <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">

    <div class="btn-group">
      <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        Products
      </button>
      <ul class="dropdown-menu">
        <% Category.all.each do |category| %>
          <li>
            <%= link_to category.title, category, class: "nav-link text-dark"%>
          </li>
        <% end %>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" href="/">All products</a></li>
      </ul>
    </div>

    <div class="col-md-3 text-end">
      <% if current_user %>
        <button type="button" class="btn btn-outline-primary"><%= link_to 'Log out', destroy_user_session_path %></button>

      <% else %>
        <button type="button" class="btn btn-outline-primary"><%= link_to 'Log in', new_user_session_path %></button>
      <% end %>
    </div>
  </header>


</div>